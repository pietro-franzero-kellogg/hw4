<div class="pt-2">
  <h1><%= @place["name"] %></h1>
</div>

<div class="py-4">
<h2>My Posts</h2>
</div>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
      <h5><%= post["title"] %></h5>
      <h6><%= post["posted_on"] %></h6>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% end %>
      <p class="pt-2"><%= post["description"] %></p>
    </div>
  <% end %>
</div>

<p>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a class="btn btn-secondary" href="/places">Back to All Places</a>
</p>